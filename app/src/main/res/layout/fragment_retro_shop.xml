<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragment.RetroShopFragment">

    <LinearLayout
        android:id="@+id/retro_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="레트로샵 아이템"
            android:fontFamily="@font/rose"
            android:textAppearance="@style/place_retro_text">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/place_retro_allbtn"
            android:fontFamily="@font/rose"
            android:layout_gravity="center"
            android:gravity="top"
            android:layout_weight="0.01">
        </TextView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/retro_item"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retro_item_text"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:id="@+id/img_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/img_ex3">
        </ImageView>
        <ImageView
            android:id="@+id/img_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/img_ex2"
            android:layout_marginLeft="10dp">
        </ImageView>
        <ImageView
            android:id="@+id/img_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/img_ex3"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/retro_item2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retro_item"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:id="@+id/img_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/img_ex3">
        </ImageView>
        <ImageView
            android:id="@+id/img_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/img_ex2"
            android:layout_marginLeft="10dp">
        </ImageView>
        <ImageView
            android:id="@+id/img_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/img_ex3"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/retro_item3"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retro_item2"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:id="@+id/img_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/img_ex3">
        </ImageView>
        <ImageView
            android:id="@+id/img_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/img_ex2"
            android:layout_marginLeft="10dp">
        </ImageView>
        <ImageView
            android:id="@+id/img_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/img_ex3"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp">
        </ImageView>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>